{
    "name": "github",
    "label": "Github Package",
    "dependencies": [
        {
            "type": "service",
            "name": "http",
            "version": "v1.2.6",
            "instanceId": "shared"
        },
        {
            "type": "package",
            "name": "oauth",
            "version": "^v1.0.16"
        }
    ],
    "configurationBuilder": "/configurationBuilder.js",
    "configuration": [
        {
            "name": "appId",
            "label": "App ID",
            "description": "ID of the GitHub app",
            "type": "text",
            "required": true
        },
        {
            "label": "Client Id",
            "name": "clientId",
            "type": "text"
        },
        {
            "label": "Client Secret",
            "name": "clientSecret",
            "type": "text"
        },
        {
            "name": "oauthCallback",
            "label": "OAuth callback",
            "description": "The OAuth callback to configure in your GitHub App",
            "type": "label",
            "value": "config.AUTH_CALLBACK_URL+'/authCallback'"
        },
        {
            "name": "webhooksUrl",
            "label": "Webhooks URL",
            "description": "The URL to configure in webhooks of your GitHub App",
            "type": "label",
            "value": "@config.WEBHOOK_URL"
        },
        {
            "name": "webhookSecret",
            "label": "Webhook secret",
            "description": "The webhook secret to validate requests",
            "type": "text",
            "required": true
        },
        {
            "name": "privateKey",
            "label": "Private key",
            "description": "This is the private key generate for the GitHub app (Copy in the original format without adding any new lines or \n characters)",
            "type": "text",
            "required": true
        },
        {
            "label": "Auth URL",
            "name": "authUrl",
            "type": "text"
        },
        {
            "label": "Access Token URL",
            "name": "accessTokenUrl",
            "type": "text"
        }
    ],
    "events": [
        {
            "label": "Webhook",
            "name": "webhook",
            "description": "Happens when GitHub sends a webhook to the package."
        },
        {
            "label": "User connected to github",
            "name": "userConnected",
            "description": "Happens when a user successfully connects to GitHub ."
        }
    ],
    "metadata": [
        {
            "type": "script",
            "namespace": "app",
            "path": "/scripts/app.js"
        },
        {
            "type": "script",
            "namespace": "install",
            "path": "/scripts/install.js"
        },
        {
            "type": "script",
            "namespace": "user",
            "path": "/scripts/user.js"
        },
        {
            "type": "listener",
            "path": "/listeners/listeners.js"
        },
        {
            "type": "flowStep",
            "namespace": "apiCallGithub",
            "path": "/flowSteps/apiCallGithub"
        }
    ]
}